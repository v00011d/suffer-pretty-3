<section class="page-header-section">
  <div class="section-container">
    <h1 class="page-title">
      {%- if section.settings.heading != blank -%}
        {{ section.settings.heading }}
      {%- elsif page.title -%}
        {{ page.title }}
      {%- elsif collection.title -%}
        {{ collection.title }}
      {%- else -%}
        {{ 'general.page' | t }}
      {%- endif -%}
    </h1>
    {%- if section.settings.description != blank -%}
      <p class="page-description">{{ section.settings.description }}</p>
    {%- elsif page.content != blank and page.content.size < 200 -%}
      <div class="page-description">{{ page.content }}</div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
  .page-header-section {
    padding: 3rem 0 2rem;
    text-align: center;
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-border);
  }

  .page-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .page-description {
    color: var(--color-foreground-muted);
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Page Header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Custom Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Page Header"
    }
  ]
}
{% endschema %}
