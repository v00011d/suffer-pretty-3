<section class="booking-form-section" data-section-id="{{ section.id }}">
  <div class="section-container">
    <div class="booking-form-wrapper">
      <div class="form-intro">
        {%- if section.settings.heading != blank -%}
          <h2 class="form-heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="form-description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>

      <form action="{{ section.settings.formspree_url }}" method="POST" class="booking-form" enctype="multipart/form-data">
        <div class="form-grid">
          {%- comment -%} Basic Information {%- endcomment -%}
          <div class="form-group">
            <label for="name" class="form-label">Name *</label>
            <input type="text" id="name" name="name" class="form-input" required>
          </div>

          <div class="form-group">
            <label for="email" class="form-label">Email *</label>
            <input type="email" id="email" name="email" class="form-input" required>
          </div>

          <div class="form-group">
            <label for="phone" class="form-label">Phone *</label>
            <input type="tel" id="phone" name="phone" class="form-input" required>
          </div>

          {%- if section.settings.form_type == 'tattoo' -%}
            {%- comment -%} Tattoo-specific fields {%- endcomment -%}
            <div class="form-group">
              <label for="date" class="form-label">Preferred Date *</label>
              <input type="date" id="date" name="date" class="form-input" required>
            </div>

            <div class="form-group">
              <label for="time" class="form-label">Preferred Time *</label>
              <select id="time" name="time" class="form-select" required>
                <option value="">Select a time</option>
                <option value="11:00 AM">11:00 AM</option>
                <option value="12:00 PM">12:00 PM</option>
                <option value="1:00 PM">1:00 PM</option>
                <option value="2:00 PM">2:00 PM</option>
                <option value="3:00 PM">3:00 PM</option>
                <option value="4:00 PM">4:00 PM</option>
                <option value="5:00 PM">5:00 PM</option>
                <option value="6:00 PM">6:00 PM</option>
                <option value="7:00 PM">7:00 PM</option>
                <option value="8:00 PM">8:00 PM</option>
                <option value="9:00 PM">9:00 PM</option>
                <option value="10:00 PM">10:00 PM</option>
                <option value="11:00 PM">11:00 PM</option>
              </select>
            </div>

            <div class="form-group form-group-full">
              <label for="session_type" class="form-label">Session Type *</label>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="session_type" value="1 Hour - $200" required>
                  <span class="radio-text">1 Hour - $200</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="session_type" value="2 Hours - $400" required>
                  <span class="radio-text">2 Hours - $400</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="session_type" value="Half Day - $600" required>
                  <span class="radio-text">Half Day - $600</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="session_type" value="Full Day - $900" required>
                  <span class="radio-text">Full Day - $900</span>
                </label>
              </div>
            </div>

          {%- elsif section.settings.form_type == 'mural' -%}
            {%- comment -%} Mural-specific fields {%- endcomment -%}
            <div class="form-group">
              <label for="location" class="form-label">Project Location *</label>
              <input type="text" id="location" name="location" class="form-input" required>
            </div>

            <div class="form-group">
              <label for="size" class="form-label">Project Size/Scope *</label>
              <input type="text" id="size" name="size" class="form-input" placeholder="e.g., 10ft x 15ft wall" required>
            </div>

            <div class="form-group">
              <label for="budget" class="form-label">Budget Range *</label>
              <select id="budget" name="budget" class="form-select" required>
                <option value="">Select a budget range</option>
                <option value="$1,000 - $2,500">$1,000 - $2,500</option>
                <option value="$2,500 - $5,000">$2,500 - $5,000</option>
                <option value="$5,000 - $10,000">$5,000 - $10,000</option>
                <option value="$10,000+">$10,000+</option>
                <option value="Open to discussion">Open to discussion</option>
              </select>
            </div>

            <div class="form-group">
              <label for="timeline" class="form-label">Timeline *</label>
              <input type="text" id="timeline" name="timeline" class="form-input" placeholder="e.g., 2-3 months" required>
            </div>
          {%- endif -%}

          {%- comment -%} Design Description {%- endcomment -%}
          <div class="form-group form-group-full">
            <label for="description" class="form-label">Design Description *</label>
            <textarea id="description" name="description" class="form-textarea" rows="6" required placeholder="Describe your vision, style preferences, and any specific details..."></textarea>
          </div>

          {%- comment -%} File Upload {%- endcomment -%}
          <div class="form-group form-group-full">
            <label for="reference_images" class="form-label">Reference Images</label>
            <input type="file" id="reference_images" name="reference_images" class="form-file" accept="image/*" multiple>
            <p class="form-hint">Upload reference images (optional, multiple files allowed)</p>
          </div>

          {%- comment -%} Additional Notes {%- endcomment -%}
          <div class="form-group form-group-full">
            <label for="notes" class="form-label">Additional Notes</label>
            <textarea id="notes" name="notes" class="form-textarea" rows="4" placeholder="Any other information you'd like to share..."></textarea>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="form-submit">Submit Booking Request</button>
        </div>

        <div class="form-success" style="display: none;">
          <p>âœ“ Thank you! Your booking request has been submitted. We'll get back to you soon.</p>
        </div>
      </form>
    </div>
  </div>
</section>

{% stylesheet %}
  .booking-form-section {
    padding: 4rem 0;
    background-color: var(--color-background);
  }

  .booking-form-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .form-intro {
    text-align: center;
    margin-bottom: 3rem;
  }

  .form-heading {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .form-description {
    color: var(--color-foreground-muted);
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .booking-form {
    background-color: var(--color-background-dark);
    padding: 2.5rem;
    border: 1px solid var(--color-border);
  }

  .form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group-full {
    grid-column: 1 / -1;
  }

  .form-label {
    color: var(--color-foreground);
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .form-input,
  .form-select,
  .form-textarea {
    padding: 0.875rem;
    background-color: var(--color-input-background);
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    font-size: 1rem;
    font-family: inherit;
    transition: border-color 0.3s ease;
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .form-textarea {
    resize: vertical;
  }

  .form-file {
    padding: 0.5rem;
    background-color: var(--color-input-background);
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    cursor: pointer;
  }

  .form-hint {
    color: var(--color-foreground-muted);
    font-size: 0.85rem;
    margin-top: 0.5rem;
  }

  .radio-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  .radio-label {
    display: flex;
    align-items: center;
    padding: 1rem;
    background-color: var(--color-input-background);
    border: 2px solid var(--color-border);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .radio-label:hover {
    border-color: var(--color-accent);
  }

  .radio-label input[type="radio"] {
    margin-right: 0.75rem;
    accent-color: var(--color-accent);
  }

  .radio-label:has(input:checked) {
    border-color: var(--color-accent);
    background-color: rgba(139, 115, 85, 0.1);
  }

  .radio-text {
    color: var(--color-foreground);
    font-size: 0.95rem;
  }

  .form-actions {
    margin-top: 2rem;
    text-align: center;
  }

  .form-submit {
    padding: 1rem 3rem;
    background-color: var(--color-accent);
    border: 2px solid var(--color-accent);
    color: var(--color-background);
    font-weight: 600;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .form-submit:hover {
    background-color: transparent;
    color: var(--color-accent);
    transform: translateY(-2px);
  }

  .form-success {
    margin-top: 1.5rem;
    padding: 1rem;
    background-color: rgba(0, 200, 0, 0.1);
    border: 1px solid rgba(0, 200, 0, 0.3);
    color: #00ff00;
    text-align: center;
  }

  @media screen and (max-width: 768px) {
    .form-grid {
      grid-template-columns: 1fr;
    }

    .booking-form {
      padding: 1.5rem;
    }

    .radio-group {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Booking Form",
  "settings": [
    {
      "type": "select",
      "id": "form_type",
      "label": "Form Type",
      "options": [
        {
          "value": "tattoo",
          "label": "Tattoo Booking"
        },
        {
          "value": "mural",
          "label": "Mural Booking"
        }
      ],
      "default": "tattoo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Book Your Session"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Fill out the form below to request a booking. We'll get back to you within 24 hours."
    },
    {
      "type": "text",
      "id": "formspree_url",
      "label": "Formspree Form Action URL",
      "info": "Enter your Formspree form URL (e.g., https://formspree.io/f/YOUR_FORM_ID)",
      "default": "https://formspree.io/f/YOUR_FORM_ID"
    }
  ],
  "presets": [
    {
      "name": "Booking Form"
    }
  ]
}
{% endschema %}
