<article class="article-section" data-section-id="{{ section.id }}">
  <div class="section-container">
    <div class="article-wrapper">
      <header class="article-header">
        <h1 class="article-title">{{ article.title }}</h1>
        <div class="article-meta">
          <span class="article-author">By {{ article.author }}</span>
          <span class="meta-separator">•</span>
          <time class="article-date">{{ article.published_at | date: '%B %d, %Y' }}</time>
        </div>
      </header>

      {%- if article.image -%}
        <div class="article-featured-image">
          <img src="{{ article.image | image_url: width: 1200 }}"
               alt="{{ article.title | escape }}"
               loading="eager">
        </div>
      {%- endif -%}

      <div class="article-content">
        {{ article.content }}
      </div>

      {%- if article.tags.size > 0 -%}
        <div class="article-tags">
          <span class="tags-label">Tags:</span>
          {%- for tag in article.tags -%}
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article-tag">{{ tag }}</a>
          {%- endfor -%}
        </div>
      {%- endif -%}

      <div class="article-navigation">
        {%- if blog.previous_article -%}
          <a href="{{ blog.previous_article.url }}" class="nav-link prev-article">
            ← {{ blog.previous_article.title }}
          </a>
        {%- endif -%}
        {%- if blog.next_article -%}
          <a href="{{ blog.next_article.url }}" class="nav-link next-article">
            {{ blog.next_article.title }} →
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</article>

{% stylesheet %}
  .article-section {
    padding: 3rem 0;
  }

  .article-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .article-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .article-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .article-meta {
    color: var(--color-foreground-muted);
    font-size: 0.95rem;
  }

  .meta-separator {
    margin: 0 0.5rem;
  }

  .article-featured-image {
    margin-bottom: 3rem;
  }

  .article-featured-image img {
    width: 100%;
    height: auto;
  }

  .article-content {
    color: var(--color-foreground);
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .article-content h2,
  .article-content h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--color-foreground);
  }

  .article-content h2 {
    font-size: 1.8rem;
  }

  .article-content h3 {
    font-size: 1.4rem;
  }

  .article-content p {
    margin-bottom: 1.5rem;
  }

  .article-content img {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
    padding: 2rem 0;
    border-top: 1px solid var(--color-border);
    margin-top: 3rem;
  }

  .tags-label {
    color: var(--color-foreground);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.9rem;
  }

  .article-tag {
    padding: 0.5rem 1rem;
    background-color: var(--color-background-dark);
    border: 1px solid var(--color-border);
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .article-tag:hover {
    border-color: var(--color-accent);
    background-color: rgba(139, 115, 85, 0.1);
  }

  .article-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .nav-link {
    padding: 1rem;
    background-color: var(--color-background-dark);
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .prev-article {
    text-align: left;
  }

  .next-article {
    text-align: right;
    grid-column: 2;
  }

  @media screen and (max-width: 768px) {
    .article-navigation {
      grid-template-columns: 1fr;
    }

    .next-article {
      grid-column: 1;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Article",
  "presets": [
    {
      "name": "Article"
    }
  ]
}
{% endschema %}
