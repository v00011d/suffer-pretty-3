{% style %}
  .y2k-nav {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: {{ section.settings.background_color }};
    border-bottom: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
  }

  .y2k-nav__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 2rem;
  }

  /* Logo/Brand */
  .y2k-nav__brand {
    justify-self: start;
  }

  .y2k-nav__logo {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: {{ section.settings.text_color }};
    text-decoration: none;
    letter-spacing: 0.02em;
    transition: transform 0.2s ease;
    display: inline-block;
  }

  .y2k-nav__logo:hover {
    transform: skew(-5deg);
  }

  /* Main Navigation */
  .y2k-nav__menu {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    justify-self: center;
  }

  .y2k-nav__link {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.5rem 1rem;
    border: {{ section.settings.border_width }}px solid transparent;
    transition: all 0.2s ease;
    position: relative;
  }

  .y2k-nav__link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    width: 0;
    height: 2px;
    background: {{ section.settings.accent_color }};
    transition: all 0.2s ease;
    transform: translateX(-50%);
  }

  .y2k-nav__link:hover::after {
    width: 100%;
  }

  .y2k-nav__link:hover {
    color: {{ section.settings.accent_color }};
  }

  /* Actions (Cart, Account) */
  .y2k-nav__actions {
    display: flex;
    gap: 1rem;
    justify-self: end;
    align-items: center;
  }

  .y2k-nav__icon-btn {
    width: 40px;
    height: 40px;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    background: {{ section.settings.icon_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }

  .y2k-nav__icon-btn:hover {
    background: {{ section.settings.accent_color }};
    transform: translate(-2px, -2px);
  }

  .y2k-nav__icon-btn:hover::after {
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    right: -2px;
    bottom: -2px;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    z-index: -1;
  }

  .y2k-nav__icon-btn svg {
    width: 20px;
    height: 20px;
    stroke: {{ section.settings.text_color }};
  }

  /* Cart count badge */
  .y2k-nav__cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.badge_text_color }};
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    width: 20px;
    height: 20px;
    border-radius: 50%;
    font-size: 0.7rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Mobile menu toggle */
  .y2k-nav__mobile-toggle {
    display: none;
  }

  @media (max-width: 968px) {
    .y2k-nav__container {
      grid-template-columns: auto 1fr auto;
    }

    .y2k-nav__menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: {{ section.settings.background_color }};
      border-bottom: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
      flex-direction: column;
      padding: 2rem;
      gap: 1rem;
    }

    .y2k-nav__menu.active {
      display: flex;
    }

    .y2k-nav__mobile-toggle {
      display: block;
      width: 40px;
      height: 40px;
      border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
      background: {{ section.settings.icon_bg_color }};
      cursor: pointer;
      justify-self: start;
    }

    .y2k-nav__brand {
      justify-self: center;
    }

    .y2k-nav__actions {
      justify-self: end;
    }
  }
{% endstyle %}

<nav class="y2k-nav">
  <div class="y2k-nav__container">
    <!-- Mobile Menu Toggle -->
    <button class="y2k-nav__mobile-toggle" onclick="toggleMobileMenu()">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>

    <!-- Brand/Logo -->
    <div class="y2k-nav__brand">
      <a href="/" class="y2k-nav__logo">
        {% if section.settings.logo_text %}
          {{ section.settings.logo_text }}
        {% else %}
          {{ shop.name }}
        {% endif %}
      </a>
    </div>

    <!-- Main Menu -->
    <ul class="y2k-nav__menu" id="mobileMenu">
      {% for link in section.settings.menu.links %}
        <li>
          <a href="{{ link.url }}" class="y2k-nav__link">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>

    <!-- Actions -->
    <div class="y2k-nav__actions">
      <!-- Search -->
      <a href="/search" class="y2k-nav__icon-btn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </a>

      <!-- Account -->
      <a href="/account" class="y2k-nav__icon-btn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </a>

      <!-- Cart -->
      <a href="/cart" class="y2k-nav__icon-btn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        <span class="y2k-nav__cart-count" id="cartCount">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>
</nav>

<script>
  function toggleMobileMenu() {
    document.getElementById('mobileMenu').classList.toggle('active');
  }
</script>

{% schema %}
{
  "name": "Y2K Navigation",
  "settings": [
    {
      "type": "header",
      "content": "Brand"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "SUFFER PRETTY"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#ff0080"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "icon_bg_color",
      "label": "Icon Button Background",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "badge_bg_color",
      "label": "Badge Background",
      "default": "#ff0000"
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Badge Text",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 2,
      "label": "Border Width"
    }
  ]
}
{% endschema %}
