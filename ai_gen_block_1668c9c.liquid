{% doc %}
  @prompt
    i want a long section split in 2 
    for my paintings and my merchandize basically, i think you can remove the header and the description, can you enclose the two section with a border for each , like not only i want to see a split in the middle but i want to see 2 floating sections aswell , can you add me more function in the buttons ,like when the mouse go over them, can the text for each of them enlight in white and get a tiny bit bigger , 
    and can i get a transparency function aswell for the button section, actually can the whole entire section enlight and enlarge a tiny bit instead of the buttons 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-section-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap_between_columns }}px;
    width: 100%;
    padding: {{ block.settings.outer_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-split-section__column-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_alignment }};
    align-items: center;
    padding: {{ block.settings.padding_desktop }}px;
    position: relative;
    overflow: hidden;
    min-height: {{ block.settings.section_height }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    {% if block.settings.enable_shadow %}
      box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    {% endif %}
  }

  .ai-split-section__column-{{ ai_gen_id }}:hover {
    transform: scale(1.02);
    filter: brightness(1.1);
    {% if block.settings.enable_shadow %}
      box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical | times: 1.5 }}px {{ block.settings.shadow_blur | times: 1.5 }}px {{ block.settings.shadow_color }};
    {% endif %}
  }

  .ai-split-section__column-{{ ai_gen_id }}:first-child {
    background-color: {{ block.settings.left_bg_color }};
  }

  .ai-split-section__column-{{ ai_gen_id }}:last-child {
    background-color: {{ block.settings.right_bg_color }};
  }

  .ai-split-section__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    transition: transform 0.3s ease;
  }

  .ai-split-section__column-{{ ai_gen_id }}:hover .ai-split-section__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-split-section__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-split-section__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-split-section__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 600px;
    width: 100%;
  }

  .ai-split-section__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    opacity: {{ block.settings.button_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .ai-split-section__column-{{ ai_gen_id }}:hover .ai-split-section__button-{{ ai_gen_id }} {
    color: #ffffff;
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .ai-split-section-{{ ai_gen_id }} {
      flex-direction: column;
      padding: {{ block.settings.outer_padding_mobile }}px;
    }

    .ai-split-section__column-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_column_height }}px;
      padding: {{ block.settings.padding_mobile }}px;
    }

    .ai-split-section__column-{{ ai_gen_id }}:hover {
      transform: scale(1.01);
    }
  }
{% endstyle %}

<div class="ai-split-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <a href="{{ block.settings.left_button_link }}" class="ai-split-section__column-{{ ai_gen_id }}">
    {% if block.settings.left_image %}
      <img
        src="{{ block.settings.left_image | image_url: width: 1500 }}"
        alt="{{ block.settings.left_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.left_image.width }}"
        height="{{ block.settings.left_image.height }}"
        class="ai-split-section__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-split-section__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}

    <div class="ai-split-section__content-{{ ai_gen_id }}">
      {% if block.settings.left_button_text != blank %}
        <span class="ai-split-section__button-{{ ai_gen_id }}">
          {{ block.settings.left_button_text }}
        </span>
      {% endif %}
    </div>
  </a>

  <a href="{{ block.settings.right_button_link }}" class="ai-split-section__column-{{ ai_gen_id }}">
    {% if block.settings.right_image %}
      <img
        src="{{ block.settings.right_image | image_url: width: 1500 }}"
        alt="{{ block.settings.right_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.right_image.width }}"
        height="{{ block.settings.right_image.height }}"
        class="ai-split-section__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-split-section__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}

    <div class="ai-split-section__content-{{ ai_gen_id }}">
      {% if block.settings.right_button_text != blank %}
        <span class="ai-split-section__button-{{ ai_gen_id }}">
          {{ block.settings.right_button_text }}
        </span>
      {% endif %}
    </div>
  </a>
</div>

