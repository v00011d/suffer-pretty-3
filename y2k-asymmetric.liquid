{% style %}
  .y2k-asymmetric {
    position: relative;
    padding: 4rem 2rem;
    background: {{ section.settings.background_color }};
    overflow: hidden;
  }

  .y2k-asymmetric__container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 2rem;
    align-items: center;
  }

  /* Block layouts - different for each block */
  .y2k-asymmetric__block {
    position: relative;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .y2k-asymmetric__block:hover {
    transform: rotate(-1deg) scale(1.02);
  }

  /* Layout variations */
  .y2k-asymmetric__block--1 {
    grid-column: 1 / 7;
    grid-row: 1 / 3;
  }

  .y2k-asymmetric__block--2 {
    grid-column: 7 / 13;
    grid-row: 1 / 2;
  }

  .y2k-asymmetric__block--3 {
    grid-column: 7 / 13;
    grid-row: 2 / 3;
  }

  .y2k-asymmetric__block--4 {
    grid-column: 1 / 5;
    grid-row: 3 / 4;
  }

  .y2k-asymmetric__block--5 {
    grid-column: 5 / 9;
    grid-row: 3 / 4;
  }

  .y2k-asymmetric__block--6 {
    grid-column: 9 / 13;
    grid-row: 3 / 4;
  }

  .y2k-asymmetric__content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    background: {{ section.settings.content_bg_color }};
  }

  .y2k-asymmetric__image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .y2k-asymmetric__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .y2k-asymmetric__block:hover .y2k-asymmetric__image {
    transform: scale(1.1);
  }

  .y2k-asymmetric__tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: {{ section.settings.tag_bg_color }};
    color: {{ section.settings.tag_text_color }};
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .y2k-asymmetric__title {
    font-size: clamp(1.2rem, 2vw, 1.8rem);
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .y2k-asymmetric__text {
    font-size: 0.95rem;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .y2k-asymmetric__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .y2k-asymmetric__link:hover {
    transform: translate(-2px, -2px);
    box-shadow: 2px 2px 0 {{ section.settings.border_color }};
  }

  .y2k-asymmetric__link::after {
    content: 'â†’';
    transition: transform 0.2s ease;
  }

  .y2k-asymmetric__link:hover::after {
    transform: translateX(3px);
  }

  /* Diagonal accent lines */
  .y2k-asymmetric__accent {
    position: absolute;
    width: 200%;
    height: 3px;
    background: {{ section.settings.accent_color }};
    transform: rotate(-5deg);
    opacity: 0.3;
  }

  .y2k-asymmetric__accent--1 {
    top: 20%;
    left: -50%;
  }

  .y2k-asymmetric__accent--2 {
    bottom: 30%;
    right: -50%;
    transform: rotate(5deg);
  }

  @media (max-width: 768px) {
    .y2k-asymmetric__container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .y2k-asymmetric__block--1,
    .y2k-asymmetric__block--2,
    .y2k-asymmetric__block--3,
    .y2k-asymmetric__block--4,
    .y2k-asymmetric__block--5,
    .y2k-asymmetric__block--6 {
      grid-column: 1;
      grid-row: auto;
    }

    .y2k-asymmetric__content {
      padding: 1.5rem;
    }
  }
{% endstyle %}

<section class="y2k-asymmetric">
  <div class="y2k-asymmetric__accent y2k-asymmetric__accent--1"></div>
  <div class="y2k-asymmetric__accent y2k-asymmetric__accent--2"></div>
  
  <div class="y2k-asymmetric__container">
    {% for block in section.blocks %}
      <div class="y2k-asymmetric__block y2k-asymmetric__block--{{ forloop.index }}">
        {% if block.settings.image %}
          <div class="y2k-asymmetric__image-wrapper">
            <img 
              class="y2k-asymmetric__image"
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
            >
          </div>
        {% endif %}

        <div class="y2k-asymmetric__content">
          {% if block.settings.tag %}
            <span class="y2k-asymmetric__tag">{{ block.settings.tag }}</span>
          {% endif %}

          {% if block.settings.title %}
            <h3 class="y2k-asymmetric__title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.text %}
            <p class="y2k-asymmetric__text">{{ block.settings.text }}</p>
          {% endif %}

          {% if block.settings.link_text and block.settings.link_url %}
            <a href="{{ block.settings.link_url }}" class="y2k-asymmetric__link">
              {{ block.settings.link_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

