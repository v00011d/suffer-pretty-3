<div class="cart-drawer" id="cart-drawer">
  <div class="cart-drawer-overlay"></div>
  <div class="cart-drawer-container">
    <div class="cart-drawer-header">
      <h2 class="cart-drawer-title">Your Cart</h2>
      <button type="button" class="cart-drawer-close" aria-label="Close cart">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>

    <div class="cart-drawer-items" id="cart-drawer-items">
      {%- if cart.item_count > 0 -%}
        {%- for item in cart.items -%}
          <div class="cart-drawer-item">
            <div class="item-image">
              {%- if item.image -%}
                <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.title | escape }}">
              {%- endif -%}
            </div>
            <div class="item-details">
              <a href="{{ item.url }}" class="item-title">{{ item.product.title }}</a>
              {%- unless item.product.has_only_default_variant -%}
                <p class="item-variant">{{ item.variant.title }}</p>
              {%- endunless -%}
              <p class="item-price">{{ item.final_price | money }}</p>
            </div>
            <div class="item-quantity">
              <input type="number" value="{{ item.quantity }}" min="0" data-line="{{ forloop.index }}" class="quantity-update">
            </div>
          </div>
        {%- endfor -%}
      {%- else -%}
        <p class="empty-cart-message">Your cart is empty</p>
      {%- endif -%}
    </div>

    <div class="cart-drawer-footer">
      <div class="cart-total">
        <span class="total-label">Subtotal:</span>
        <span class="total-value">{{ cart.total_price | money }}</span>
      </div>
      <a href="/cart" class="view-cart-button">View Cart</a>
      <button type="button" name="checkout" class="checkout-button">Checkout</button>
    </div>
  </div>
</div>

<style>
  .cart-drawer {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    pointer-events: none;
  }

  .cart-drawer.active {
    pointer-events: all;
  }

  .cart-drawer-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cart-drawer.active .cart-drawer-overlay {
    opacity: 1;
  }

  .cart-drawer-container {
    position: absolute;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 400px;
    height: 100%;
    background-color: var(--color-background);
    display: flex;
    flex-direction: column;
    transition: right 0.3s ease;
  }

  .cart-drawer.active .cart-drawer-container {
    right: 0;
  }

  .cart-drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .cart-drawer-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cart-drawer-close {
    background: none;
    border: none;
    color: var(--color-foreground);
    cursor: pointer;
    padding: 0.5rem;
  }

  .cart-drawer-items {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .cart-drawer-item {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .item-image img {
    width: 100%;
    height: auto;
  }

  .item-title {
    font-weight: 600;
    color: var(--color-foreground);
    display: block;
    margin-bottom: 0.25rem;
  }

  .item-variant,
  .item-price {
    font-size: 0.9rem;
    color: var(--color-foreground-muted);
  }

  .quantity-update {
    width: 60px;
    padding: 0.5rem;
    background-color: var(--color-input-background);
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    text-align: center;
  }

  .empty-cart-message {
    text-align: center;
    color: var(--color-foreground-muted);
    padding: 3rem 1rem;
  }

  .cart-drawer-footer {
    padding: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .cart-total {
    display: flex;
    justify-content: space-between;
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .view-cart-button,
  .checkout-button {
    display: block;
    width: 100%;
    padding: 1rem;
    text-align: center;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
    transition: all 0.3s ease;
  }

  .view-cart-button {
    background-color: transparent;
    border: 2px solid var(--color-accent);
    color: var(--color-accent);
  }

  .view-cart-button:hover {
    background-color: var(--color-accent);
    color: var(--color-background);
  }

  .checkout-button {
    background-color: var(--color-accent);
    border: 2px solid var(--color-accent);
    color: var(--color-background);
    cursor: pointer;
  }

  .checkout-button:hover {
    background-color: var(--color-accent-hover);
  }
</style>
