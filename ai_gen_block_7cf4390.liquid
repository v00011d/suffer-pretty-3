{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-rotator-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: center;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-text-rotator-content-{{ ai_gen_id }} {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-text-rotator-text-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    position: relative;
  }

  .ai-text-rotator-rotating-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.text_weight }};
    min-height: {{ block.settings.text_size | times: 1.2 }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    font-family: monospace;
    letter-spacing: 2px;
    transition: all 0.3s ease;
  }

  .ai-text-rotator-rotating-text-{{ ai_gen_id }}.distorting {
    filter: blur(0px);
    animation: ai-distort-wave-{{ ai_gen_id }} 2s ease-in-out infinite;
  }

  .ai-text-rotator-rotating-text-{{ ai_gen_id }}::before,
  .ai-text-rotator-rotating-text-{{ ai_gen_id }}::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    pointer-events: none;
    transition: all 0.3s ease;
  }

  .ai-text-rotator-rotating-text-{{ ai_gen_id }}.distorting::before {
    color: {{ block.settings.distortion_color_1 }};
    animation: ai-distort-before-{{ ai_gen_id }} 2s ease-in-out infinite;
    opacity: 0.6;
  }

  .ai-text-rotator-rotating-text-{{ ai_gen_id }}.distorting::after {
    color: {{ block.settings.distortion_color_2 }};
    animation: ai-distort-after-{{ ai_gen_id }} 2s ease-in-out infinite;
    opacity: 0.6;
  }

  @keyframes ai-distort-wave-{{ ai_gen_id }} {
    0%, 100% {
      transform: skewX(0deg) translateX(0);
      filter: blur(0px);
    }
    25% {
      transform: skewX(2deg) translateX(2px);
      filter: blur(0.5px);
    }
    50% {
      transform: skewX(-2deg) translateX(-2px);
      filter: blur(1px);
    }
    75% {
      transform: skewX(1deg) translateX(1px);
      filter: blur(0.5px);
    }
  }

  @keyframes ai-distort-before-{{ ai_gen_id }} {
    0%, 100% {
      transform: translateX(0) translateY(0);
      opacity: 0;
    }
    25% {
      transform: translateX(-3px) translateY(-1px);
      opacity: 0.5;
    }
    50% {
      transform: translateX(-5px) translateY(-2px);
      opacity: 0.7;
    }
    75% {
      transform: translateX(-3px) translateY(-1px);
      opacity: 0.5;
    }
  }

  @keyframes ai-distort-after-{{ ai_gen_id }} {
    0%, 100% {
      transform: translateX(0) translateY(0);
      opacity: 0;
    }
    25% {
      transform: translateX(3px) translateY(1px);
      opacity: 0.5;
    }
    50% {
      transform: translateX(5px) translateY(2px);
      opacity: 0.7;
    }
    75% {
      transform: translateX(3px) translateY(1px);
      opacity: 0.5;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-text-rotator-rotating-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.7 }}px;
      min-height: {{ block.settings.text_size | times: 0.7 | times: 1.2 }}px;
    }
  }
{% endstyle %}

<text-rotator-{{ ai_gen_id }}
  class="ai-text-rotator-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-text-rotator-content-{{ ai_gen_id }}">
    <div class="ai-text-rotator-text-wrapper-{{ ai_gen_id }}">
      <div class="ai-text-rotator-rotating-text-{{ ai_gen_id }}" data-text="{{ block.settings.final_text }}">
        {{ block.settings.final_text }}
      </div>
    </div>
  </div>
</text-rotator-{{ ai_gen_id }}>

<script>
  (function() {
    class TextRotator{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.textElement = this.querySelector('.ai-text-rotator-rotating-text-{{ ai_gen_id }}');
        this.wrapper = this.querySelector('.ai-text-rotator-text-wrapper-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.wrapper.addEventListener('mouseenter', () => {
          this.textElement.classList.add('distorting');
        });

        this.wrapper.addEventListener('mouseleave', () => {
          this.textElement.classList.remove('distorting');
        });
      }
    }

    customElements.define('text-rotator-{{ ai_gen_id }}', TextRotator{{ ai_gen_id }});
  })();
</script>

