<section class="newsletter-section" data-section-id="{{ section.id }}">
  <div class="section-container">
    <div class="newsletter-content">
      {%- if section.settings.heading != blank -%}
        <h2 class="newsletter-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <p class="newsletter-description">{{ section.settings.description }}</p>
      {%- endif -%}

      <form method="post" action="/contact#contact_form" class="newsletter-form">
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="form-row">
          <input type="email"
                 name="contact[email]"
                 placeholder="Enter your email"
                 class="newsletter-input"
                 required
                 aria-label="Email address">
          <button type="submit" class="newsletter-button">Subscribe</button>
        </div>
      </form>
    </div>
  </div>
</section>

{% stylesheet %}
  .newsletter-section {
    padding: 5rem 0;
    background-color: var(--color-background-dark);
  }

  .newsletter-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter-heading {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .newsletter-description {
    color: var(--color-foreground-muted);
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .form-row {
    display: flex;
    gap: 0.5rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .newsletter-input {
    flex: 1;
    padding: 1rem;
    background-color: var(--color-input-background);
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    font-size: 1rem;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .newsletter-button {
    padding: 1rem 2rem;
    background-color: var(--color-accent);
    border: none;
    color: var(--color-background);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .newsletter-button:hover {
    background-color: var(--color-accent-hover);
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .form-row {
      flex-direction: column;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay Updated"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Subscribe to get updates on new work, events, and exclusive offers."
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
