<section class="portfolio-gallery-section" data-section-id="{{ section.id }}">
  <div class="section-container">
    {%- if section.settings.heading != blank -%}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="portfolio-grid">
      {%- for block in section.blocks -%}
        <div class="portfolio-item" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <img src="{{ block.settings.image | image_url: width: 800 }}"
                 alt="{{ block.settings.title | escape }}"
                 class="portfolio-image"
                 loading="lazy">
          {%- else -%}
            <div class="portfolio-placeholder">
              <span class="placeholder-text">[IMAGE PLACEHOLDER]</span>
            </div>
          {%- endif -%}
          {%- if block.settings.title != blank -%}
            <div class="portfolio-overlay">
              <h3 class="portfolio-title">{{ block.settings.title }}</h3>
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .portfolio-gallery-section {
    padding: 4rem 0;
    background-color: var(--color-background);
  }

  .section-heading {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 3rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .portfolio-item {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .portfolio-item:hover {
    transform: scale(1.05);
  }

  .portfolio-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .portfolio-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
  }

  .placeholder-text {
    color: var(--color-foreground-muted);
    font-size: 0.9rem;
    text-transform: uppercase;
  }

  .portfolio-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1.5rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .portfolio-item:hover .portfolio-overlay {
    opacity: 1;
  }

  .portfolio-title {
    color: var(--color-foreground);
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Portfolio Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Portfolio"
    },
    {
      "type": "select",
      "id": "gallery_type",
      "label": "Gallery Type",
      "options": [
        {"value": "tattoos", "label": "Tattoos"},
        {"value": "murals", "label": "Murals"},
        {"value": "art", "label": "Art"}
      ],
      "default": "tattoos"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Portfolio Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Image Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Portfolio Gallery"
    }
  ]
}
{% endschema %}
