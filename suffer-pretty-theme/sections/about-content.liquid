<section class="about-section" data-section-id="{{ section.id }}">
  <div class="section-container">
    <div class="about-content">
      {%- if section.settings.image != blank -%}
        <div class="about-image">
          <img src="{{ section.settings.image | image_url: width: 800 }}"
               alt="{{ section.settings.image_alt | default: 'About Void' }}"
               loading="lazy">
        </div>
      {%- endif -%}

      <div class="about-text">
        {%- if section.settings.heading != blank -%}
          <h2 class="about-heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.content != blank -%}
          <div class="about-biography">
            {{ section.settings.content }}
          </div>
        {%- else -%}
          <div class="about-biography">
            <p>[CONTENT AREA - Add your artist biography and story here]</p>
          </div>
        {%- endif -%}

        {%- if section.settings.artist_statement != blank -%}
          <div class="artist-statement">
            <h3 class="statement-heading">Artist Statement</h3>
            <div class="statement-content">
              {{ section.settings.artist_statement }}
            </div>
          </div>
        {%- endif -%}

        {%- if section.blocks.size > 0 -%}
          <div class="skills-timeline">
            <h3 class="skills-heading">Experience & Skills</h3>
            <div class="timeline">
              {%- for block in section.blocks -%}
                <div class="timeline-item" {{ block.shopify_attributes }}>
                  {%- if block.settings.year != blank -%}
                    <div class="timeline-year">{{ block.settings.year }}</div>
                  {%- endif -%}
                  <div class="timeline-content">
                    {%- if block.settings.title != blank -%}
                      <h4 class="timeline-title">{{ block.settings.title }}</h4>
                    {%- endif -%}
                    {%- if block.settings.description != blank -%}
                      <p class="timeline-description">{{ block.settings.description }}</p>
                    {%- endif -%}
                  </div>
                </div>
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .about-section {
    padding: 4rem 0;
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    align-items: start;
  }

  .about-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .about-heading {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .about-biography {
    color: var(--color-foreground);
    line-height: 1.8;
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }

  .artist-statement {
    background-color: var(--color-background-dark);
    padding: 2rem;
    border-left: 4px solid var(--color-accent);
    margin-bottom: 3rem;
  }

  .statement-heading {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-accent);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .statement-content {
    color: var(--color-foreground-muted);
    line-height: 1.7;
  }

  .skills-heading {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: var(--color-border);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 2rem;
    padding-left: 2rem;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: -2rem;
    top: 0.5rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: var(--color-accent);
    border: 2px solid var(--color-background);
  }

  .timeline-year {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-accent);
    margin-bottom: 0.5rem;
  }

  .timeline-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 0.5rem;
  }

  .timeline-description {
    color: var(--color-foreground-muted);
    line-height: 1.6;
  }

  @media screen and (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About Content",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Artist Photo"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Artist Void"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Void"
    },
    {
      "type": "html",
      "id": "content",
      "label": "Biography Content"
    },
    {
      "type": "html",
      "id": "artist_statement",
      "label": "Artist Statement"
    }
  ],
  "blocks": [
    {
      "type": "timeline_item",
      "name": "Experience Item",
      "settings": [
        {
          "type": "text",
          "id": "year",
          "label": "Year"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Content"
    }
  ]
}
{% endschema %}
