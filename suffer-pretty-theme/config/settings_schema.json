[
  {
    "name": "theme_info",
    "theme_name": "Suffer Pretty",
    "theme_version": "1.0.0",
    "theme_author": "Void",
    "theme_documentation_url": "https://github.com/your-repo/suffer-pretty-theme",
    "theme_support_url": "mailto:voidinkcreation@proton.me"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#0a0a0a"
      },
      {
        "type": "color",
        "id": "color_foreground",
        "label": "Text Color",
        "default": "#e0e0e0"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#8b7355"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border Color",
        "default": "#2a2a2a"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading Font"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body Font"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base Font Size",
        "default": 16
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Page Width"
      },
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 50,
        "unit": "px",
        "label": "Maximum Page Width",
        "default": 1400
      },
      {
        "type": "range",
        "id": "page_margin",
        "min": 1,
        "max": 5,
        "step": 0.5,
        "unit": "rem",
        "label": "Page Margin",
        "default": 2
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Header Settings"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 100,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo Width",
        "default": 200
      },
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main Menu",
        "default": "main-menu"
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "Footer Settings"
      },
      {
        "type": "text",
        "id": "footer_brand_heading",
        "label": "Brand Heading",
        "default": "Suffer Pretty"
      },
      {
        "type": "textarea",
        "id": "footer_brand_description",
        "label": "Brand Description",
        "default": "Dark angel aesthetic. Tattoos, murals, and art by Void."
      },
      {
        "type": "checkbox",
        "id": "footer_show_email",
        "label": "Show Email Address",
        "default": true
      },
      {
        "type": "link_list",
        "id": "footer_menu",
        "label": "Footer Menu"
      },
      {
        "type": "header",
        "content": "Social Media"
      },
      {
        "type": "url",
        "id": "social_instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "url",
        "id": "social_facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "url",
        "id": "social_twitter_url",
        "label": "Twitter/X URL"
      },
      {
        "type": "url",
        "id": "social_tiktok_url",
        "label": "TikTok URL"
      },
      {
        "type": "checkbox",
        "id": "footer_show_newsletter",
        "label": "Show Newsletter Signup",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart Settings"
      },
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart Type",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ],
        "default": "drawer"
      }
    ]
  },
  {
    "name": "Product",
    "settings": [
      {
        "type": "header",
        "content": "Product Page Settings"
      },
      {
        "type": "checkbox",
        "id": "product_show_vendor",
        "label": "Show Vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_show_sku",
        "label": "Show SKU",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_enable_zoom",
        "label": "Enable Image Zoom",
        "default": true
      }
    ]
  },
  {
    "name": "Social Sharing",
    "settings": [
      {
        "type": "header",
        "content": "Social Sharing Image"
      },
      {
        "type": "image_picker",
        "id": "social_sharing_image",
        "label": "Default Social Sharing Image",
        "info": "Recommended size: 1200 x 630px"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon Image",
        "info": "Recommended size: 32 x 32px"
      }
    ]
  }
]
