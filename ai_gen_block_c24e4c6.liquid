<script>
(function() {
  class TattooBooking{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.currentDate = new Date();
      this.availableDates = {{ block.settings.available_dates | split: ',' | json }}.map(d => d.trim()).filter(d => d);
    }

    connectedCallback() {
      this.calendarGrid = this.querySelector('[data-calendar-grid]');
      this.monthYearDisplay = this.querySelector('[data-month-year]');
      this.prevBtn = this.querySelector('[data-action="prev"]');
      this.nextBtn = this.querySelector('[data-action="next"]');
      this.selectedDateInput = this.querySelector('#selected-date-{{ ai_gen_id }}');

      this.prevBtn.addEventListener('click', () => this.changeMonth(-1));
      this.nextBtn.addEventListener('click', () => this.changeMonth(1));

      this.renderCalendar();
    }

    changeMonth(delta) {
      this.currentDate.setMonth(this.currentDate.getMonth() + delta);
      this.renderCalendar();
    }

    isDateAvailable(dateStr) {
      return this.availableDates.some(availDate => {
        const normalized = availDate.toLowerCase().replace(/\s+/g, '');
        const checkDate = dateStr.toLowerCase().replace(/\s+/g, '');
        return normalized.includes(checkDate) || checkDate.includes(normalized);
      });
    }

    renderCalendar() {
      const year = this.currentDate.getFullYear();
      const month = this.currentDate.getMonth();
      
      const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
        'July', 'August', 'September', 'October', 'November', 'December'];
      
      this.monthYearDisplay.textContent = monthNames[month] + ' ' + year;

      const firstDay = new Date(year, month, 1).getDay();
      const daysInMonth = new Date(year, month + 1, 0).getDate();

      let html = '';
      const dayHeaders = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
      dayHeaders.forEach(day => {
        html += '<div class="ai-tattoo-booking__calendar-day-header-{{ ai_gen_id }}">' + day + '</div>';
      });

      for (let i = 0; i < firstDay; i++) {
        html += '<div class="ai-tattoo-booking__calendar-day-{{ ai_gen_id }} ai-tattoo-booking__calendar-day--empty-{{ ai_gen_id }}"></div>';
      }

      for (let day = 1; day <= daysInMonth; day++) {
        const dateStr = monthNames[month] + ' ' + day + ', ' + year;
        const shortDate = (month + 1) + '/' + day + '/' + year;
        const isAvailable = this.isDateAvailable(dateStr) || this.isDateAvailable(shortDate);
        
        const availableClass = isAvailable 
          ? 'ai-tattoo-booking__calendar-day--available-{{ ai_gen_id }}'
          : 'ai-tattoo-booking__calendar-day--unavailable-{{ ai_gen_id }}';
        
        html += '<div class="ai-tattoo-booking__calendar-day-{{ ai_gen_id }} ' + availableClass + '" data-date="' + dateStr + '" data-available="' + isAvailable + '">' + day + '</div>';
      }

      this.calendarGrid.innerHTML = html;

      this.querySelectorAll('.ai-tattoo-booking__calendar-day--available-{{ ai_gen_id }}').forEach(dayEl => {
        dayEl.addEventListener('click', (e) => {
          const selectedDate = e.target.getAttribute('data-date');
          this.selectedDateInput.value = selectedDate;
          
          this.querySelectorAll('.ai-tattoo-booking__calendar-day-{{ ai_gen_id }}').forEach(d => {
            d.style.outline = 'none';
          });
          e.target.style.outline = '2px solid {{ block.settings.button_color }}';
        });
      });
    }
  }

  customElements.define('tattoo-booking-{{ ai_gen_id }}', TattooBooking{{ ai_gen_id }});
})();
</script>

